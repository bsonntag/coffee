<p id="notice"><%= notice %></p>

<div class="User-info">
  <div class="User-line User-name">
    <i class="fa fa-3x fa-user"></i>
    <p class="User-text"><%= @user.name %></p>
  </div>

  <div class="User-line User-credit <%= (@user.credit < 0 ? 'User--warn' : '') %>">
    <i class="fa fa-3x fa-credit-card"></i>
    <p class="User-text"><%= number_to_currency(@user.credit / 100.0, unit: 'â‚¬') %></p>
  </div>

  <div class="User-line User-coffees" onclick="goTo('<%= user_drinks_path(@user) %>')">
    <i class="fa fa-3x fa-coffee"></i>
    <p class="User-text"><%= @user.coffees.count %></p>
  </div>
</div>

<div class="User-actions">
  <form class="User-action" method="POST" action="/users/<%= @user.id %>/money">
    <div class="input-group">
      <input class="form-control" type="number" id="user_money" name="user[money]" value="50"></input>
      <span class="input-group-btn">
        <input class="btn btn-default" type="submit" value="Add money"></input>
      </span>
    </div>
  </form>

  <form class="User-action" method="POST" action="<%= user_drinks_path(@user) %>">
    <input type="hidden" id="drink_category" name="drink[category]" value="coffee"></input>
    <input class="btn btn-default" type="submit" value="Add coffee"></input>
  </form>

  <div class="User-action" >
    <%= link_to 'Edit', edit_user_path(@user.to_model) %> |
    <%= link_to 'Back', users_path %>
  <div>
</div>
